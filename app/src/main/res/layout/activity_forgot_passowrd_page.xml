<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signing.ActivityForgotPasswordPage">

    <EditText
        android:id="@+id/forgetPassowrdEmail"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="152dp"
        android:background="@drawable/search_box_background"
        android:ems="10"
        android:foregroundGravity="center"
        android:gravity="center"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/forgotPasswordSendCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:padding="0dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:text="SEND CODE"
        android:textColor="#6C78C0"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:backgroundTint="@color/white"
        app:iconPadding="0dp"
        app:layout_constraintEnd_toEndOf="@+id/forgetPassowrdEmail"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/forgetPassowrdEmail"
        app:layout_constraintTop_toBottomOf="@+id/forgetPassowrdEmail" />

    <EditText
        android:id="@+id/forgotPasswordCodeField"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="156dp"
        android:background="@drawable/search_box_background"
        android:ems="10"
        android:foregroundGravity="center"
        android:gravity="center"
        android:hint="Enter Code"
        android:inputType="number"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/forgetPassowrdEmail"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/forgetPassowrdEmail"
        app:layout_constraintTop_toBottomOf="@+id/forgotPasswordSendCode" />

    <Button
        android:id="@+id/forgetPasswordEnterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="ENTER"
        android:textSize="20sp"
        app:backgroundTint="#3F51B5"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="@+id/forgotPasswordCodeField"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/forgotPasswordCodeField"
        app:layout_constraintTop_toBottomOf="@+id/forgotPasswordCodeField" />
</androidx.constraintlayout.widget.ConstraintLayout>